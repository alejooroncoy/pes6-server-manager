---
import Footer from "../components/sections/Footer.astro";
import Header from "../components/sections/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <title>{title} | PSM ⚽</title>
    <meta
      name="description"
      content="Pes6 server manager helps its users to be able to have control of the servers where they play. In this way, with a few simple clicks, play PES 6 on the server of your choice. 💻⚽"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://pes6-server-manager.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Home page 🏠 | PSM ⚽" />
    <meta
      property="og:description"
      content="Pes6 server manager helps its users to be able to have control of the servers where they play. In this way, with a few simple clicks, play PES 6 on the server of your choice. 💻⚽"
    />
    <meta property="og:image" content="https://i.postimg.cc/hG9Rnwxq/psm.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="pes6-server-manager.vercel.app" />
    <meta
      property="twitter:url"
      content="https://pes6-server-manager.vercel.app/"
    />
    <meta name="twitter:title" content="Home page 🏠 | PSM ⚽" />
    <meta
      name="twitter:description"
      content="Pes6 server manager helps its users to be able to have control of the servers where they play. In this way, with a few simple clicks, play PES 6 on the server of your choice. 💻⚽"
    />
    <meta
      name="twitter:image"
      content="https://i.postimg.cc/hG9Rnwxq/psm.jpg"
    />
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
